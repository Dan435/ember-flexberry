<div class="field">
  <label>{{<%= caption %>}}</label>
  {{
    flexberry-lookup
    choose='showLookupDialog'
    remove='removeLookupValue'
    value=model.<%= name %>
    <%if(type == 'combo'){%>dropdown=true<%}else{%>
    <%if(lookupValueField){%>displayAttributeName='<%= lookupValueField %>'
    autocomplete=true<%}else{%><%}%><%}%>
    relationName='<%= name %>'
    projection='<%= projection %>'
    title=(<%= caption %>)
    readonly=<%= readonly %>
    componentName="<%= name %>Lookup"
  }}
  {{flexberry-validationmessage error=model.errors.<%= name %> pointing="pointing"}}
</div>
